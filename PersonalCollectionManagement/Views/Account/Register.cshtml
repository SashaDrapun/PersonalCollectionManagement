<div class="modal-dialog modal-dialog-centered " role="document">
    <div class="modal-content text-white bg-dark">
        <div class="modal-header ">
            <h5 class="modal-title">Регистрация</h5>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <form method="post">
                    <div class="form-group">
                        <label for="InputEmail">Email</label>
                        <input type="email" name="email" class="form-control" id="InputEmail"
                               placeholder="Email" >
                        @if (ViewBag.EmailMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.EmailMessage</small>
                        }
                    </div>

                    <div class="form-group">
                        <label for="Nickname">Никнейм</label>
                        <input type="text" name="nickname" class="form-control" id="Nickname"
                               placeholder="Никнейм" aria-describedby="emailHelp">
                        @if (ViewBag.NicknameMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.NicknameMessage</small>
                        }

                    </div>

                    <div class="form-group">
                        <label for="InputPassword">Пароль</label>
                        <input type="password" name="password" class="form-control" id="InputPassword"
                               placeholder="Пароль">
                    </div>

                    <div class="form-group">
                        <label for="ConfirmPassword">Подтверждение пароль</label>
                        <input type="password" class="form-control" id="ConfirmPassword"
                               placeholder="Пароль">
                    </div>

                    <button type="submit" class="btn btn-primary">
                        Зарегистрироваться
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
