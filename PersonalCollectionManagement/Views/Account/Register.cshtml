@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["CurrentPage"] = "Registration";
    ViewData["Title"] = Localizer["Registration"];
    ViewData["Dog"] = "@";
}

<div class="modal-dialog modal-dialog-centered " role="document">
    <div class="modal-content text-@ViewBag.Text bg-@ViewBag.Bg">
        <div class="modal-header ">
            <h5 class="modal-title">@Localizer["Registration"]</h5>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <form method="post">
                    @if (ViewBag.MessageAboutBlocked != null)
                    {
                        <small class="form-text text-danger">@ViewBag.MessageAboutBlocked</small>
                    }
                    <div class="form-group">
                        <label for="InputEmail">@Localizer["Email"]</label>
                        <input type="email"
                               name="email"
                               class="form-control"
                               id="InputEmail"
                               placeholder="Email"
                               pattern="([0-9a-z_.]+@(ViewData["Dog"])[0-9a-z_^.]+.[a-z]{2,3})+"
                               title="@Localizer["MailEnteredIncorrectly"]">
                        @if (ViewBag.EmailMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.EmailMessage</small>
                        }
                    </div>

                    <div class="form-group">
                        <label for="Nickname">@Localizer["Nickname"]</label>
                        <input type="text"
                               name="nickname"
                               class="form-control"
                               id="Nickname"
                               placeholder="@Localizer["Nickname"]">

                        @if (ViewBag.NicknameMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.NicknameMessage</small>
                        }
                    </div>

                    <div class="form-group">
                        <label for="InputPassword">@Localizer["Password"]</label>
                        <input type="password"
                               name="password"
                               class="form-control"
                               id="InputPassword"
                               placeholder="@Localizer["Password"]"
                               pattern="\w{5}"
                               title="@Localizer["PasswordLimit"]">
                        @if (ViewBag.PasswordMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.PasswordMessage</small>
                        }
                    </div>

                    <div class="form-group">
                        <label for="ConfirmPassword">@Localizer["ConfirmPassword"]</label>
                        <input type="password"
                               name="ConfirmPassword"
                               class="form-control"
                               id="ConfirmPassword"
                               placeholder="@Localizer["ConfirmPassword"]">
                        @if (ViewBag.ConfirmPasswordMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.ConfirmPasswordMessage</small>
                        }
                    </div>

                    <button type="submit" class="btn btn-primary">
                        @Localizer["SignUp"]
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
