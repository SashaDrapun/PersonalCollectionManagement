@{
    ViewData["CurrentPage"] = "Registration";
    ViewData["Title"] = "Регистрация";
    ViewData["Dog"] = "@";
}

<div class="modal-dialog modal-dialog-centered " role="document">
    <div class="modal-content text-white bg-dark">
        <div class="modal-header ">
            <h5 class="modal-title">Регистрация</h5>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <form method="post">
                    @if (ViewBag.MessageAboutBlocked != null)
                    {
                        <small class="form-text text-danger">@ViewBag.MessageAboutBlocked</small>
                    }
                    <div class="form-group">
                        <label for="InputEmail">Email</label>
                        <input type="email"
                               name="email"
                               class="form-control"
                               id="InputEmail"
                               placeholder="Email"
                               pattern="([0-9a-z_.]+@(ViewData["Dog"])[0-9a-z_^.]+.[a-z]{2,3})+"
                               title="Почта введена некорректно">
                        @if (ViewBag.EmailMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.EmailMessage</small>
                        }
                    </div>

                    <div class="form-group">
                        <label for="Nickname">Никнейм</label>
                        <input type="text"
                               name="nickname"
                               class="form-control"
                               id="Nickname"
                               placeholder="Никнейм">

                        @if (ViewBag.NicknameMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.NicknameMessage</small>
                        }
                    </div>

                    <div class="form-group">
                        <label for="InputPassword">Пароль</label>
                        <input type="password"
                               name="password"
                               class="form-control"
                               id="InputPassword"
                               placeholder="Пароль"
                               pattern="\w{5}"
                               title="Пароль должен состоять как минимум из 5 алфавитно-цифровых символов">
                        @if (ViewBag.PasswordMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.PasswordMessage</small>
                        }
                    </div>

                    <div class="form-group">
                        <label for="ConfirmPassword">Подтверждение пароля</label>
                        <input type="password"
                               name="ConfirmPassword"
                               class="form-control"
                               id="ConfirmPassword"
                               placeholder="Пароль">
                        @if (ViewBag.ConfirmPasswordMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.ConfirmPasswordMessage</small>
                        }
                    </div>

                    <button type="submit" class="btn btn-primary">
                        Зарегистрироваться
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
