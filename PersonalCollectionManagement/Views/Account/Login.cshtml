@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    @model PersonalCollectionManagement.ViewModels.LoginModel
    ViewData["CurrentPage"] = "Autorization";
    ViewData["Title"] = Localizer["Authorization"];
    ViewData["Dog"] = "@";
}

<div class="modal-dialog modal-dialog-centered " role="document">
    <div class="modal-content text-@ViewBag.Text bg-@ViewBag.Bg">
        <div class="modal-header ">
            <h5 class="modal-title">@Localizer["Authorization"]</h5>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <form name="loginForm" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail">@Localizer["Email"]</label>
                        <input type="email"
                               name="email"
                               class="form-control"
                               id="exampleInputEmail"
                               placeholder="Email"
                               pattern="([0-9a-z_.]+@(ViewData["Dog"])[0-9a-z_^.]+.[a-z]{2,3})+"
                               title="@Localizer["MailEnteredIncorrectly"]">
                        @if (ViewBag.EmailMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.EmailMessage</small>
                        }
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword">@Localizer["Password"]</label>
                        <input type="password"
                               name="password"
                               class="form-control"
                               id="exampleInputPassword"
                               placeholder="@Localizer["Password"]">
                        @if (ViewBag.PasswordMessage != null)
                        {
                            <small class="form-text text-danger">@ViewBag.PasswordMessage</small>
                        }
                    </div>

                    <button type="submit" class="btn btn-primary mb-2">
                        @Localizer["LogIn"]
                    </button>
                </form>

                <h5>@Localizer["SocialLogin"]</h5>
                <form method="post" asp-controller="Account" asp-action="ExternalLogins">
                    <div>
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <button class="btn btn-primary" name="provider" value="@provider.Name">
                                @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/js/socialNetworks.js"></script>
