@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    if (ViewData["CurrentPage"] == null)
    {
        ViewData["CurrentPage"] = "none";
    }
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <meta name="google-signin-client_id" content="1089335293941-qo0noc7ua1ni85igdll557sps0vsdd7s.apps.googleusercontent.com">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    @if (ViewBag.Bg == "dark")
    {
        <link rel="stylesheet" href="~/css/DarkThemeTable.css">
    }
    else
    {
        <link rel="stylesheet" href="~/css/LightThemeTable.css">
    }

    <title>@ViewData["Title"]</title>


</head>
<body class="bg-@(ViewBag.Bg) p-2">
    <p id="LengthMenu" class="d-none">@Localizer["LengthMenu"]</p>
    <p id="ZeroRecords" class="d-none">@Localizer["ZeroRecords"]</p>
    <p id="Info" class="d-none">@Localizer["Info"]</p>
    <p id="InfoEmpty" class="d-none">@Localizer["InfoEmpty"]</p>
    <p id="InfoFiltered" class="d-none">@Localizer["InfoFiltered"]</p>
    <p id="Search" class="d-none">@Localizer["Search"]</p>

    <div id="content"></div>
    <nav class="navbar navbar-expand-lg navbar-@(ViewBag.Bg) bg-@(ViewBag.Bg)">
        <a class="navbar-brand" href="#">@Localizer["PersonalCollectionManagement"]</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item @(ViewData["CurrentPage"].ToString() == "Main"?"active":"")">
                    <a class="nav-link" href="~/Home/Index">@Localizer["Main"]</a>
                </li>
                <li class="nav-item @(ViewData["CurrentPage"].ToString() == "Users"?"active":"")">
                    <a class="nav-link" asp-controller="Home" asp-action="Users">@Localizer["Users"]</a>
                </li>
                <li class="nav-item @(ViewData["CurrentPage"].ToString() == "Collections"?"active":"")">
                    <a class="nav-link" asp-controller="Home" asp-action="Collections">@Localizer["Collections"]</a>
                </li>
                @if (ViewBag.AutorizeUser == null)
                {
                    <li class="nav-item autorization @(ViewData["CurrentPage"].ToString() == "Autorization"?"active":"")">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">
                            @Localizer["Authorization"]
                        </a>
                    </li>
                    <li class="nav-item registration @(ViewData["CurrentPage"].ToString() == "Registration"?"active":"")">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">
                            @Localizer["Registration"]
                        </a>
                    </li>
                }

                @if (ViewBag.AutorizeUser != null)
                {
                    <li class="nav-item mr-2">
                        <a asp-controller="Home" asp-action="UserPage" asp-route-idUser="@ViewBag.AutorizeUser.Id">
                            <h3 class='text-success' id="userNickname">@ViewBag.AutorizeUser.Nickname</h3>
                        </a>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout">
                            <button type="submit" id="exit" class="btn btn-primary mr-2">@Localizer["Exit"]</button>
                        </form>
                    </li>
                }
            </ul>
            <form asp-controller="Search" asp-action="Items" asp-route-act="search" class="form-inline" my-2 my-lg-0>
                <input type="text" name="searchValue" class="form-control mr-sm-2" placeholder="@Localizer["Search"]">
                <button class="btn btn-outline-success my-2" my-sm-0>@Localizer["Search"]</button>
            </form>
        </div>
    </nav>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="~/js/Main.js"></script>
    @RenderBody()

</body>
</html>