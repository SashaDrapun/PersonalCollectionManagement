<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Менеджер личных коллекций</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Home/Index">Главная</a>
                </li>
                <li class="nav-item autorization">
                    <a class="nav-link" data-toggle="modal" data-target="#autorization">Авторизация</a>
                </li>
                <li class="nav-item registration">
                    <a class="nav-link" data-toggle="modal" data-target="#registration">Регистрация</a>
                </li>
                <li class="nav-item userNickname mr-2">
                    <a asp-action="PersonalArea" asp-controller="Home"><h3 class='text-success' id="userNickname"></h3></a>
                </li>
                <li class="nav-item buttonContainer">
                    <button type="submit" id="exit" class="btn btn-primary mr-2">Выход</button>
                </li>
            </ul>
            <form class="form-inline" my-2 my-lg-0>
                <input type="text" class="form-control mr-sm-2" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2" my-sm-0>Search</button>
            </form>
        </div>
    </nav>

    <div class='modal fade' id='autorization' tabindex="-1" role="dialog"
         aria-labelledby="Autorization" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered " role="document">
            <div class="modal-content text-white bg-dark">
                <div class="modal-header ">
                    <h5 class="modal-title " id="exampleModalLabel">Авторизация</h5>
                    <button class="close autorization" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <form name="loginForm">
                            <div class="form-group">
                                <label for="exampleInputEmail">Email</label>
                                <input type="email" name="email" class="form-control" id="exampleInputEmail"
                                       placeholder="Email" aria-describedby="emailHelp">
                                <small id="emailHelp" class="form-text text-muted">Введите свой Email</small>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword">Пароль</label>
                                <input type="password" name="password" class="form-control" id="exampleInputPassword"
                                       placeholder="Пароль">
                                <small id="passHelp" class="form-text text-muted">Пароль должен содержать 10 символов</small>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                Авторизоваться
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class='modal fade' id='registration' tabindex="-1" role="dialog"
         aria-labelledby="Autorization" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered " role="document">
            <div class="modal-content text-white bg-dark">
                <div class="modal-header ">
                    <h5 class="modal-title " id="exampleModalLabel">Регистрация</h5>
                    <button class="close registration" type="button" data-dismiss="modal"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <form name="registerForm" id="form">
                            <div class="form-group">
                                <label for="InputEmail">Email</label>
                                <input type="email" name="email" class="form-control" id="InputEmail"
                                       placeholder="Email" aria-describedby="emailHelp">
                                <small id="emailHelp" class="form-text text-muted">Введите свой Email</small>
                            </div>

                            <div class="form-group">
                                <label for="Nickname">Никнейм</label>
                                <input type="text" name="nickname" class="form-control" id="Nickname"
                                       placeholder="Никнейм" aria-describedby="emailHelp">
                                <small id="emailHelp" class="form-text text-muted">Введите свой никнейм</small>
                            </div>

                            <div class="form-group">
                                <label for="InputPassword">Пароль</label>
                                <input type="password" name="password" class="form-control" id="InputPassword"
                                       placeholder="Пароль">
                                <small id="passHelp" class="form-text text-muted">Пароль должен содержать 10 символов</small>
                            </div>

                            <div class="form-group">
                                <label for="ConfirmPassword">Подтверждение пароль</label>
                                <input type="password" class="form-control" id="ConfirmPassword"
                                       placeholder="Пароль">
                                <small id="passHelp" class="form-text text-muted">Пароль должен содержать 10 символов</small>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                Зарегистрироваться
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/js/AutorizationAndRegistration.js"></script>
    @RenderBody()
</body>
</html>