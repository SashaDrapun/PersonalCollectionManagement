<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Менеджер личных коллекций</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Home/Index">Главная</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"  asp-controller="Home" asp-action="Users">Пользователи </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">Коллекции</a>
                </li>
                @if (ViewBag.AutorizeUser == null)
                {
                    <li class="nav-item autorization">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">
                        Авторизация
                        </a>
                    </li>
                    <li class="nav-item registration">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">
                        Регистрация
                        </a>
                    </li>
                }

                @if (ViewBag.AutorizeUser != null)
                {
                    <li class="nav-item mr-2">
                        <a asp-controller="Home" asp-action="UserPage" asp-route-nicknameUser="@ViewBag.AutorizeUser.Id">
                        <h3 class='text-success' id="userNickname">@ViewBag.AutorizeUser.Nickname</h3>
                        </a>
                    </li>
                    <li class="nav-item">
                        <button type="submit" id="exit" class="btn btn-primary mr-2">Выход</button>
                    </li>
                }
            </ul>
            <form asp-controller="Home" asp-action="Items" class="form-inline" my-2 my-lg-0>
                <input type="text" name="searchText" class="form-control mr-sm-2" placeholder="Поиск" aria-label="Search">
                <button class="btn btn-outline-success my-2" my-sm-0>Поиск</button>
            </form>
        </div>
    </nav>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/js/Menu.js"></script>
    @RenderBody()
</body>
</html>